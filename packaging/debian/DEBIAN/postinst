#!/bin/bash
set -e

# Post-installation script for family-policy

# Create necessary directories
mkdir -p /etc/family-policy
mkdir -p /var/lib/browser-extension-policy

# Set permissions
chmod 755 /etc/family-policy
chmod 755 /var/lib/browser-extension-policy

# Reload systemd
if command -v systemctl >/dev/null 2>&1; then
    systemctl daemon-reload || true
fi

echo ""
echo "Family Policy Agent has been installed."
echo ""
echo "To configure and start the agent:"
echo "  1. sudo family-policy agent setup --url YOUR_GITHUB_POLICY_URL"
echo "  2. sudo family-policy agent install"
echo "  3. sudo family-policy agent start"
echo ""

exit 0
